{
	"manifest_version": 2,
	"name": "Tab Volume",
	"version": "1.0",

	"description": "Allows user to set volume for each tab",
	"homepage_url": "https://github.com/jicbo/tab-volume",
	"icons": {
		"512": "icons/wave-512.png"
	},

	"permissions": ["activeTab", "storage"],

	"browser_action": {
		"default_icon": "icons/wave-512.png",
		"default_title": "Tab Volume",
		"default_popup": "popup/popup.html"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["tab_volume.js"]
		}
	]
}
